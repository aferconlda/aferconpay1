rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer utilizador autenticado leia e escreva
    // na sua pr√≥pria pasta de documentos KYC.
    match /kyc_documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}