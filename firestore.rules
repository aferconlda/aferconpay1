
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Funções auxiliares
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regras para a coleção de utilizadores
    match /users/{userId} {
      // Leitura: Qualquer utilizador autenticado pode ler perfis.
      allow read: if request.auth != null;

      // Criação: Um utilizador só pode criar o seu próprio documento.
      allow create: if isOwner(userId);

      // Atualização: Regras granulares para atualização.
      allow update: if isOwner(userId) &&
                      // O utilizador não pode alterar o seu próprio role, saldo ou status de verificação.
                      !('role' in request.resource.data) &&
                      !('balance' in request.resource.data) &&
                      !('cashierFloatBalance' in request.resource.data) &&
                      !('isVerified' in request.resource.data) &&
                      !('kycStatus' in request.resource.data) &&
                      // Permite a atualização de campos como displayName, phoneNumber, nif e fcmToken.
                      request.resource.data.keys().hasAny(['displayName', 'phoneNumber', 'nif', 'fcmToken']);

      // Subcoleções do utilizador
      match /transactions/{transactionId} {
        allow read, list: if isOwner(userId);
        allow create, update, delete: if false; // Apenas o servidor pode gerir transações.
      }

      match /notifications/{notificationId} {
        allow read, list: if isOwner(userId);
        // Permite ao utilizador marcar as suas próprias notificações como lidas.
        allow update: if isOwner(userId) && request.resource.data.keys().hasOnly(['read']);
        allow create, delete: if false; // Apenas o servidor pode criar notificações.
      }
    }

    // Outras coleções...
    match /credit_requests/{requestId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }

    match /deposit_requests/{requestId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }
    
    match /withdrawal_requests/{requestId} {
      allow create: if request.auth != null;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin();
    }
    
    // Coleções não utilizadas devem ser bloqueadas
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
